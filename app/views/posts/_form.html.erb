<%= form_for(@post) do |f| %>
     <h1></h1>
     <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Selecciona una categoria" }) %><br>
     <%= f.label :titulo %><br>
     <%= f.text_field :title, placeholder: "Titulo del post" %><br>
     <%= f.label :contenido %><br>
     <%= f.text_area :content, size: "60x12", placeholder: "Contenido del post" %><br>

     <%= f.submit %>
<% end %>
